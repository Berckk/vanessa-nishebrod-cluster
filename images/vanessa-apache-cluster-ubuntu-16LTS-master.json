{
  "builders": [
      {
         "type": "digitalocean",
         "api_token": "{{user `do_api_token`}}",
         "image": "ubuntu-16-04-x64",
         "ssh_username": "root",
         "region": "fra1",
         "size": "512mb"
      }
  ],

  "provisioners": [{
    "type": "shell",
    "inline": [
      "sleep 30",
      "sudo curl -sSL https://get.docker.com/ | sh;",
      "sudo apt-get install zfs-fuse -y -q ",
      "docker version"
    ]
  },
  {
    "type": "shell",
    "script": "./images/prepare.sh"
  },
  {
    "type": "file",
    "source": "./vanessa-web-services",
    "destination": "/tmp/apache"
  },
  {
    "type": "file",
    "source": "./.env",
    "destination": "/tmp/apache/.env"
  },
  {
    "type": "shell",
    "script": "./images/build.sh"
  }
  ],
  "post-processors": [{
      "type": "atlas",
      "token": "{{user `atlas_token`}}",
      "artifact": "silverbulleters/vanessa-apache-cluster-ub16LTSmaster-do",
      "artifact_type": "digitalocean.image",
      "metadata": {
         "created_at": "{{timestamp}}"
      }
    }
  ],

  "variables": {
      "do_api_token": "",
      "atlas_token": "",
      "compression_level": "6"
  }
}